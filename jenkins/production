pipeline {
    agent {
        label 'master'
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install"'
            }
        }
        stage("Rsync Production") {
            steps {
                sh 'rsync --delete -azvv ./ --rsync-path="rsync" kubectl:/tmp/i2g-local'
            }
        }


        stage('Build and push docker image') {
            steps {
                sh 'ssh kubectl "cd /tmp/ig2-local && npm run build"'
            }
        }
    }
}

