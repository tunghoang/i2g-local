pipeline {
    agent {
        label 'master'
    }

    stage("Rsync Production") {
            steps {
                sh 'rsync --delete -azvv ./ --rsync-path="rsync" kubectl:/tmp/i2g-local'
            }
        }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'ssh kubectl "cd /tmp/i2g-local && npm install"'
            }
        }

        stage('Build and push docker image') {
            steps {
                sh 'ssh kubectl "npm run build"'
            }
        }
    }
}

